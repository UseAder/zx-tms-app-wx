image {
  width: 100%;
  height: 100%;
}

.page__hd {
  width: 100%;
  height: 320rpx;
  position: relative;
}

.weui-search-bar {
  position: absolute;
  width: 100%;
  padding: 40rpx 40px;
  top: 0;
  background: transparent;
  border: 0;
}

.weui-search-bar__form {
  border-radius: 6px;
  overflow: hidden;
  border: 0;
}

.weui-search-bar__box {
  background: #003573;
}

.weui-search-bar__label {
  padding: 0 40rpx;
  background: #003573;
  border: 0;
  color: #b1b1b1;
}

.weui-icon-search {
  position: absolute;
left:234rpx;

  top: 6rpx;
}

.weui-search-bar__cancel-btn {
 color:#ccf;

box-sizing: border-box;
border-radius:6px;



}

.searchbar-result {
  position: absolute;
  width: 100%;
  padding: 40px;
  top: 11px;
  box-sizing: border-box;
  z-index: 2;
  margin-top:92rpx;
  padding-top: 0;
}

.searchbar-result .table {
  background: #fff;
  border-radius: 3px;
  box-sizing: border-box;
  box-shadow: 0 0 16rpx 0 rgba(0, 0, 0, 0.3);
  padding: 10rpx 0 15rpx 0;
}

.searchbar-result .table .weui-cell {
  line-height: 58rpx;
  margin: 0 15px;
}

.page__hd-ul {
  font-weight: 700;
  color: #fff;
  display: flex;
  position: absolute;
  top: 160rpx;
  justify-content: space-around;
  width: 100%;
  text-align: center;
  line-height: 62rpx;
}

.title {
  line-height: 76rpx;
  padding-left: 46rpx;
}

.BusinessFunView-ul, .OtherFunView-ul {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.BusinessFunView-li, .OtherFunView-li {
  display: flex;
  justify-content: center;
  align-items: center;
}

.BusinessFunView-li {
  border-bottom: 1px solid #e5e5e5;
}

.VerticalCenter {
  height: 120rpx;
  position: relative;
  width: 80px;
}

.dataTitle {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  bottom: 4rpx;
}

.OtherFunView-li, .BusinessFunView-li {
  height: 180rpx;
  border-top: 1px solid #e5e5e5;
  border-right: 1px solid #e5e5e5;
  width: 33.3333%;
  box-sizing: border-box;
  text-align: center;
}

.OtherFunView-li:nth-child(3n), .BusinessFunView-li:nth-child(3n) {
  border-right: none;
}

.BusinessFunView-li:nth-child(1) image {
  width: 60rpx;
  height: 60rpx;
}

.BusinessFunView-li:nth-child(2) image {
  width: 70rpx;
  height: 68rpx;
}

.BusinessFunView-li:nth-child(3) image {
  width: 88rpx;
  height: 62rpx;
  position: absolute;
  top: 6rpx;
  left: 40rpx;
}

.OtherFunView-li:nth-child(1) image {

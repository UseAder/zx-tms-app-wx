page {
  background: #fff;
}

.page__title {
  font-size: 36rpx;
  padding-top: 24rpx;
}

/*登录图片*/

.login-icon {
  flex: none;
}

.login-img {
  width: 750rpx;
}

/*表单内容*/

.login-from {
  margin-top: - 100rpx;
  height: 100%;
}

.weui-input {
  display: inline-flex;
  width: 560rpx;
  margin-left: 29rpx;
}

.inputView {
  background-color: #fff;
  line-height: 50rpx;
  border-bottom: 1px solid #545454;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

/*输入框*/

.nameImage {
  width: 48rpx;
  height: 48rpx;
}

.Image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 2rpx;
}

.keyImage {
  width: 40rpx;
  height: 40rpx;
  margin-right: 4rpx;
}

.inputText {
  display: inline-block;
  color: #ccc;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

/*按钮*/

.weui-btn-area {
  padding-top: 30rpx;
}

.weui-btn-area button {
  color: #fff;
  font-size: 32rpx;
  background: #003573;
  border-radius: 7px;
  width: 321px;
  height: 44px;
}

.weui-cell {
  height: 102rpx;
  margin: 0px auto;
  justify-content: unset;
  position: relative;
  width: 321px;
}

.weui-footer {
  position: fixed;
  bottom: 80rpx;
  margin: 0 auto;
  left: 0;
  right: 0;
  width: 600rpx;
}

.page__bd {
  padding-top: 60rpx;
  font-size: 32rpx;
}

.page__hd {
  margin: auto;
  width: 100%;
  text-align: center;
  padding-top: 40rpx;
  display: block;
}
